		<!-- MY ACCOUNT PAGE -->
		<section class="my_account parallax">
			
			<!-- CONTAINER -->
			<div class="container">
				
				<div class="my_account_block clearfix">
					<div class="login">
						<h2>Tạo tài khoản</h2>
						
						{{#each message}}
							<div class="alert alert-danger">
								<li>{{this}}</li>
							</div>
						{{/each}}
						<form class="login_form"  method="POST">
                            <input type="email" name="email"  value="Email" onFocus="if (this.value == 'Email') this.value = '';" onBlur="if (this.value == '') this.value = 'Email';"  />
                            <input type="text" name="phonenumber"  value="Số điện thoại" onFocus="if (this.value == 'Số điện thoại') this.value = '';" onBlur="if (this.value == '') this.value = 'Số điện thoại';" />
							<input type="text" name="username"  value="Tên người dùng" onFocus="if (this.value == 'Tên người dùng') this.value = '';" onBlur="if (this.value == '') this.value = 'Tên người dùng';" />
							<input class="last" type="password" placeholder="mật khẩu" name="password"   onFocus="if (this.value == 'password') this.value = '';" onBlur="if (this.value == '') this.value = 'password';" />
							<input class="last" type="password" placeholder="nhập lại mật khẩu" name="passwordconf"   onFocus="if (this.value == 'password') this.value = '';" onBlur="if (this.value == '') this.value = 'password';" />
							<div class="clearfix">
								{{!-- <div class="pull-left"><input type="checkbox" id="categorymanufacturer1" /><label for="categorymanufacturer1">Keep me signed</label></div>
								<div class="pull-right"><a class="forgot_pass" href="javascript:void(0);" >Forgot password?</a></div> --}}
							</div>
							<div class="center"><input type="submit" value="Đăng ký"></div>
						</form>
					</div>
					<div class="new_customers">
						<h2>Quyền lợi khi là thành viên</h2>
						<p>Đăng ký thành viên để nhận được những quyền lợi sau:</p>
						<ul>
							<li>—  Đặt hàng online</li>
							<li>—  Trò chuyện trực tiếp với người bán hàng</li>
							<li>—  Đưa ra đánh giá về sản phẩm</li>
							<li>—  Nhận được những ưu đãi tốt nhất</li>
							
						</ul>
						{{!-- <div class="center"><a class="btn active" href="javascript:void(0);" >create new account</a></div> --}}
					</div>
				</div>
				
				<div class="my_account_note center">Số điện thoại liên hệ: <b>1 800 888 02828</b></div>
			</div><!-- //CONTAINER -->
		</section><!-- //MY ACCOUNT PAGE -->
		
	
