    <section id="contact">
        <div class="container">
            <h2 class="text-uppercase text-center text-secondary mb-0">Liên hệ</h2>
            <hr class="star-dark mb-5" />
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <form id="contactForm" name="sentMessage" novalidate="novalidate">
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Họ tên</label>
                                <input class="form-control" type="text" required placeholder="Tên" id="name" />
                                <small class="form-text text-danger help-block"></small>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Địa chỉ email</label>
                                <input class="form-control" type="email" required placeholder="Email" id="email" />
                                <small class="form-text text-danger help-block"></small>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Số điện thoại</label>
                                <input class="form-control" type="tel" required placeholder="Điện thoại" id="phone" />
                                <small class="form-text text-danger help-block"></small>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-5 pb-2">
                                <textarea class="form-control" rows="5" required placeholder="Tin nhắn"
                                    id="message"></textarea>
                                <small class="form-text text-danger help-block"></small>
                            </div>
                        </div>
                        <div id="success"></div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-xl" id="sendMessageButton">Gửi</button>
                        </div>
                    </form>

                    <script type="text/javascript">
                        $("#sendMessageButton").click(() => {
                            $.post("/contact", {
                                name: $("#name").val(),
                                email: $("#email").val(),
                                phoneNumber: $("#phone").val(),
                                message: $("#message").val()
                            }, (success) => {
                                console.log("trang thai: " + success);
                                if (success) {
                                    alert("Cảm ơn phản hồi của bạn!\nChúng mình sẽ cố gắng hết mình để phát triển Quizy.");
                                    console.log("da thanh cong");
                                } else {
                                    alert("Phản hồi của bạn chưa được ghi lại.\nVui lòng thử lại.");
                                }
                            })
                        });
                    </script>
                </div>
            </div>
        </div>
